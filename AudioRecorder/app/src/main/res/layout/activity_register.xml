<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/Tittle_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:text="@string/register"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textColor="@color/black" />

        <TableLayout
            android:id="@+id/SignUp_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TableRow>
                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:layout_below="@+id/id"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edge"
                    android:paddingLeft="20dp" />

                <Button
                    android:id="@+id/check_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/dark_puple"
                    android:text="중복 체크"
                    android:textSize="15dp" />
            </TableRow>
        </TableLayout>


        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SignUp_table"
            android:text="@string/pass"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/pass"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edge"
            android:paddingLeft="20dp" />

        <CheckBox
            android:id="@+id/eye"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/et_pass"
            android:layout_alignBottom="@+id/et_pass"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:button="@null"
            android:background="@drawable/checkbox"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_pass"
            android:layout_marginTop="20dp"
            android:background="@drawable/basic_btn"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="10dp"
            android:background="@drawable/basic_btn"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>
</LinearLayout>
