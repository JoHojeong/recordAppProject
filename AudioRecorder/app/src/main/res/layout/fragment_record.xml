<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecordFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Tittle_main"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:text=" "
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/record_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:src="@drawable/main_record" />

        <Chronometer
            android:id="@+id/record_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/record_btn"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/black"
            android:textSize="64sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/send_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보내는 사람"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edit_send_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_people" />

        <TextView
            android:id="@+id/send_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_send_people"
            android:text="전송 일자"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edit_send_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_date" />

        <TextView
            android:id="@+id/send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_send_date"
            android:text="전송 시간"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edit_send_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_time"/>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_send_time"
            android:layout_marginTop="20dp"
            android:background="@drawable/basic_btn"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>